{
  "manifest_version": 2,
  "name": "Hosterino",
  "description": "Notify you if you're not currently hosting anyone on Twitch.tv",
  "version": "1.0.1",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["hosterino.js"]
  },
  "icons": {
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://twitch.tv/*",
        "http://www.twitch.tv/*",
        "https://twitch.tv/*",
        "https://www.twitch.tv/*"
      ],
      "css": ["contentscript.css"],
      "js": ["contentscript.js"]
    }
  ],
  "permissions": [
    "background",
    "webRequest",
    "tabs",
    "*://*.twitch.tv/",
    "*://twitch.tv/"
  ]
}